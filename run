#! /bin/bash
SECCOMP_PROFILE="chrome_docker_seccomp_profile.json"
if [[ ! -f "$SECCOMP_PROFILE" ]]; then
    wget https://raw.githubusercontent.com/jfrazelle/dotfiles/master/etc/docker/seccomp/chrome.json -O "$SECCOMP_PROFILE"
fi

docker run --rm -t -i \
    -v $PWD/bin:/home/mitm/bin \
    -v $PWD/data:/home/mitm/data \
    --security-opt seccomp="$SECCOMP_PROFILE" \
    hild1.no:mitmchrome /bin/bash

